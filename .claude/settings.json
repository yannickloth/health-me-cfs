{
  "permissions": {
    "allow": [
      "Bash(nix build:*)",
      "Bash(nix run:*)",
      "Bash(latexmk:*)",
      "Bash(pdflatex:*)",
      "Bash(bibtex:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Read(./**/*.tex)",
      "Read(./**/*.bib)",
      "Read(./**/*.sty)",
      "Read(./.claude/**)",
      "Bash(find:*)",
      "Read(//tmp/**)",
      "Bash(./.claude/scripts/validate-tikz.sh:*)",
      "Read(//nix/store/**)",
      "Bash(jobs:*)",
      "Bash(pstree:*)",
      "Bash(tee:*)",
      "Read(//home/nicky/code/health-me-cfs/**)",
      "Read(//home/nicky/.claude/plans/**)",
      "Read(//home/nicky/.claude/**)",
      "Bash(xargs:*)",
      "Bash(test:*)",
      "Bash(git push:*)",
      "Read(//home/nicky/code/causal-graph-theory/**)",
      "Bash(file:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Read(./.env)",
      "Read(./.env.*)"
    ],
    "additionalDirectories": [
      "/home/nicky/code/health-me-cfs/figures",
      "/home/nicky/code/health-me-cfs/Literature/pathophysiology/blood-volume",
      "/home/nicky/code/health-me-cfs/.claude/agents",
      "/tmp",
      "/home/nicky/code/health-me-cfs/.claude",
      "/home/nicky/.claude/agents",
      "/home/nicky/.claude",
      "/home/nicky/code/health-me-cfs"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_INPUT_PATH\" == *.tex ]]; then echo '[hook] .tex file modified - consider running nix build to check for errors'; fi",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/context-cost-monitor.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "syntax-fixer",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[hook] Syntax fixes complete - rebuilding to verify'; nix build 2>&1 | tail -20",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
