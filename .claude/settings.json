{
  "permissions": {
    "allow": [
      "Bash(nix build:*)",
      "Bash(nix run:*)",
      "Bash(latexmk:*)",
      "Bash(pdflatex:*)",
      "Bash(bibtex:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Read(./**/*.tex)",
      "Read(./**/*.bib)",
      "Read(./**/*.sty)",
      "Read(./.claude/**)",
      "Bash(find:*)",
      "Read(//tmp/**)",
      "Bash(./.claude/scripts/validate-tikz.sh:*)",
      "Read(//nix/store/**)",
      "Bash(jobs:*)",
      "Bash(pstree:*)",
      "Bash(tee:*)",
      "Read(//home/nicky/code/health-me-cfs/**)",
      "Read(//home/nicky/.claude/plans/**)",
      "Read(//home/nicky/.claude/**)",
      "Bash(xargs:*)",
      "Bash(test:*)",
      "Bash(git push:*)",
      "Read(//home/nicky/code/causal-graph-theory/**)",
      "Bash(file:*)",
      "Bash(command:*)",
      "Bash(pdftoppm:*)",
      "Bash(mutool draw:*)",
      "Bash(timeout:*)",
      "Bash(wait)",
      "Bash(unzip:*)",
      "WebFetch(domain:doi.org)",
      "WebFetch(domain:zenodo.org)",
      "Bash(gh auth:*)",
      "Bash(cat:*)",
      "Read(//home/nicky/code/claude-router-system/docs/**)",
      "Read(//home/nicky/code/claude-router-system/**)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Read(./.env)",
      "Read(./.env.*)"
    ],
    "additionalDirectories": [
      "/home/nicky/code/claude-router-system/implementation"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_INPUT_PATH\" == *.tex ]]; then echo '[hook] .tex file modified - consider running nix build to check for errors'; fi",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/context-cost-monitor.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "INPUT=$(cat); AGENT=$(echo \"$INPUT\" | jq -r '.agent_type // \"unknown\"'); CWD=$(echo \"$INPUT\" | jq -r '.cwd // \".\"'); PROJECT=$(basename \"$CWD\"); LOGS_DIR=\"$CWD/.claude/logs\"; mkdir -p \"$LOGS_DIR\"; echo \"$(date -Iseconds) | $PROJECT | $AGENT\" >> \"$LOGS_DIR/routing.log\"; echo \"[routing] $PROJECT â†’ $AGENT\" >&2",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "syntax-fixer",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[hook] Syntax fixes complete - rebuilding to verify'; nix build 2>&1 | tail -20",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
